{
  "name": "git-commit-to-html",
  "version": "1.0.0",
  "description": "Generate HTML diff for git commits",
  "main": "cli.js",
  "bin": {
    "git-commit-to-html": "cli.js"
  },
  "scripts": {
  "format": "prettier --write .",
  "fetch:libs": "node ./scripts/fetch-libs.js",
  "postinstall": "node ./scripts/fetch-libs.js"
  },
  "keywords": [
    "git",
    "commit",
    "diff",
    "html",
    "cli"
  ],
  "author": "",
  "license": "ISC",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flawiddsouza/git-commit-to-html.git"
  },
  "bugs": {
    "url": "https://github.com/flawiddsouza/git-commit-to-html/issues"
  },
  "homepage": "https://github.com/flawiddsouza/git-commit-to-html#readme",
  "files": [
    "cli.js",
  "libs/**",
  "scripts/fetch-libs.js",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "diff2html": "^3.4.52"
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
